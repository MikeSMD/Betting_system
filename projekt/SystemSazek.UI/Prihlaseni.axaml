<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="SystemSazek.UI.Prihlaseni"
        Width="1080" Height="720" Title="Vítejte!">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="20" Width="300">
            <TextBlock Text="Přihlášení" FontSize="24" HorizontalAlignment="Center" />

            <StackPanel Spacing="5">
                <TextBlock Text="Uživatelské jméno:" FontSize="16" />
                <TextBox x:Name="UsernameInput" Width="300" Height="40" FontSize="14"/>
            </StackPanel>

            <StackPanel Spacing="5">
                <TextBlock Text="Heslo:" FontSize="16" />
                <TextBox x:Name="PasswordInput" Width="300" Height="40" FontSize="14" PasswordChar="*"/>
            </StackPanel>

            <Button Content="Přihlásit se" 
                    Width="150" Height="50" 
                    FontSize="16" 
                    HorizontalContentAlignment="Center" 
                    VerticalContentAlignment="Center"
                    Background="Green" 
                    Foreground="White" 
                    HorizontalAlignment="Center"
                    Click="OnLoginClicked"/>
        </StackPanel>
    </Grid>
</Window>
